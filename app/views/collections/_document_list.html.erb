<% @batch_size_on_other_page = 0 %>
<% @all_checked = false %>
<% @max_batch_size = 100 %>
<% @user = current_user %>
<% if documents.empty? %>
  <div class="alert alert-warning" role="alert"><%= t('sufia.collection.document_list.no_visible_works') %></div>
<% else %>
  <% @document_list = documents %>
  <% if params[:action] == "edit" %>
    <%= render 'sufia/my/_index_partials/default_group', documents: documents, docs: documents %>
  <% else %>
    <%= render 'show_document_list', documents: documents %>
  <% end %>
<% end %>
