@font-face {
  font-family: 'Lato';
  font-style: normal;
  font-weight: normal;
  src: url(<%= asset_path 'fonts/Lato-Light.eot' %>);
  src: local('Lato'), local('Lato'), url(<%= asset_path 'fonts/Lato-Light.ttf' %>) format('truetype');
}
body {
	font: 13px/1.4em Arial, sans-serif;
	background: #fff url(<%= asset_path 'site_images/bg_body.png' %>) left top repeat;
}
p, address, ul, ol, li, dt, dd, td, th, div, blockquote {
	color: #000;
}
/* Headings */
h1, h2, h3, h4, h5 {
  color: #5d5d5d;
  font-family: "Lato", Arial, sans-serif;
  font-weight: 300; 
}
ul.help-list {
  margin: 0 0 10px 0;
}
ul.help-list li {
  font-size: 12px;
  padding: 0;
  margin: 0 0 0 5px;
  list-style: none;
}

ul.slide-list {
  clear: left;
  margin: 0 0 10px 0;
}
ul.slide-list li {
  font-size: 12px;
  padding: 0;
  margin: 0 0 0 5px;
  list-style: none;
}
.grey, .grey:hover{
  color:  #999999;
}
li.expandable {
  cursor:pointer;
}
li.expandable_new {
  cursor:pointer;
}
#facets {
  padding-left: 5px;
}
/* submit your work link */
#contribute_link {
  display: block /* makes the button take up the full width */
}
/* Layout */
#wrapper {
  background: url(<%= asset_path 'site_images/bg_masthead.png' %>) center top no-repeat;
}
/* #container { */
#page-positioner {
  position: relative;
  width: 980px;
  margin: 0 auto;
}
#masthead { 
	position: relative;
	height: 165px;
  background: url(<%= asset_path 'site_images/bg_search_header.png' %>) center 80px no-repeat;
	width: 940px;
	margin: 0 auto;
}
#content-wrapper {
	padding: 0 19px 0 21px;
  background: url(<%= asset_path 'site_images/bg_content2.png' %>) 0 0 no-repeat;
}
#content {
  /* width: 900px; */
  clear: both;
  position: relative;
  padding: 20px; 
  background: #fff;
  min-height: 525px;
}

#search-form-header {
	position: absolute;
  bottom: 5px;
  right: 10px;
}
a.advanced_search {
  color: #eee;
}
a.advanced_search:hover {
  color: #fff;
  text-decoration: none;
}
/* Pages */
#shield {
	float: left;
	margin: 15px 0 0 0;
}
#logo {
  position: absolute;
  top: 40px;
  left: 85px;
}
.nav li a.top_nav{
	font-size: 14px;
	line-height: 18px; 
	padding: 6px 12px;
	font-weight: bold;
}

#advanced_search_tips {
  list-style: none;
  margin: 0 0 5px 5px; 
}

/* Footer */
#footer-wrapper {
  background: #404040 url(<%= asset_path 'site_images/bg_footer.png' %>) 0 0 repeat-x;
}
#footer {
	width: 920px;
	margin: 0 auto;
	padding: 20px;
}
.footer-logo {
	float: left;
	width: 215px;
}
.footer-text {
	float: right;
	text-align: right;
	margin: 20px 0 0 0;
}
.footer-text ul {
	list-style: none;
	font-size: 11px;
	line-height: 15px;
	color: #c6c6c6;
	margin: 0;
}
.footer-text li {
	display: inline;
	margin: 0 0 0 20px;
}
#footer p {
	margin: 0 0 10px;
	font-size: 11px;
	line-height: 15px;
	color: #c6c6c6;
}
#footer .footer-logo p {
	margin: 0;
}
#footer a {
	color: #c6c6c6;
}
/* icons shouldn't change color */
a i, a:hover i {
  color: #000;
  text-decoration: none;
}

/* used for the more details on dashboard */
table.expanded-details {
  width: 75%;
  margin: 0 auto;
}

/* used for public/penn state/private radio buttons for permissions */
div.btn-group[data-toggle=buttons-radio] input[type=radio] {
  display:    block;
  position:   absolute;
  top:        0;
  left:       0;
  width:      100%;
  height:     100%;
  opacity:    0;
}

.btn-warning.active,
.btn-danger.active,
.btn-success.active,
.btn-primary.active {  
    font-weight:bold;
    color: yellow;  
}

/* used to over ride some defaults set in bootstrap.css */
.center, th.center, td.center {
  text-align: center;
}

/* use if a label should be hidden from view but available to screen readers */
.accessible-hidden {
  position: absolute !important;
  clip: rect(1px 1px 1px 1px); /* IE6, IE7 */
  clip: rect(1px, 1px, 1px, 1px);
}

/* used on facets */
a small{
  font-size:9px
}

/* used for the table to display the activity log */
#activity {
  display: block;
  height: 200px;
  overflow-y: scroll;
}
/* user information list on user show page */
dl#user_info dt{
  padding-top: 15px;
}
/* icon colors for links in blue buttons */
a.btn-primary i, a.btn-primary:hover i { 
  color: #fff;
}
.error {
  color: #990000;
}
/* override the padding left on nav-list from bootstrap */
.nav-list {
  padding-left: 0px;
}

ul.faq li       { list-style-type: none }  
ol.faq        { list-style-type: decimal }  
ol.faq li     { list-style-type: decimal }  
ol.faq ol     { list-style-type: lower-alpha } 
ol.faq ol li    { list-style-type: lower-alpha } 
ol.faq ol ol  { list-style-type: lower-roman }  
ol.faq ol ol li { list-style-type: lower-roman }

.pager .current {
    border: 1px solid #DDDDDD;
    border-radius: 15px 15px 15px 15px;
    display: inline-block;
    padding: 5px 14px;
}
.pager a.disabled, .pager .current {
  pointer-events: none; 
  cursor: default; 
  font-style: bold;
  background-color: #ffff00;
}

.pager span.disabled {
    background-color: #bebebe;
    border: 1px solid #DDDDDD;
    border-radius: 15px 15px 15px 15px;
    display: inline-block;
    padding: 5px 14px;
}    
    
.pager a[rel="next"].disabled, .pager a[rel="prev"].disabled {
  font-style: italic;
  background-color: #bebebe;
}    

.overlay {
    position:absolute;
    top:0px; /* in conjunction with left property, decides the text position */
    right:0px;
    border-radius: 10px 10px 10px 10px;
    font-size:9px;
    font-style: bold;
    background-color: #ffff00;
    padding: 1px 3px;
    opacity:0.7; /* transparency */  
    filter:alpha(opacity=70); /* IE transparency */  
    
}

.fleft {
    float: left;
}

.fright {
    float: right;
}

.navbar .icon-btn {
    padding: 4px 20px 4px 2px;
}

.extra_tag {
    position: relative;
    top: -60px;
}
